<html>
<head>
<meta charset = 'UTF-8'>
<h3>Auxiliary Services Time Sheet</h3>
<script language = 'JavaScript'>
  count = 0
  limit = 10
  function addInput() {
    if (count < limit) {
			var table = document.getElementById('timeTable')
			var row = table.insertRow(-1)
			var cell1 = row.insertCell(0)
			cell1.innerHTML = '<input type = 'date' name = 'time[][date]'>
			var cell2 = row.insertCell(1)
			cell2.innerHTML = '<input type = 'number' name = 'time[][hours]' min = 0 max = 20 step = 0.05>
		count++
	} else
		alert = 'You cannot add any more items'
  }
</script>
</head>
<body>
<form method = 'post' action = 'http://localhost/output.php'>
Name:<br>
<input type = 'text' name = 'name'>
<table id = 'timeTable'>
<tr><th>Date</th><th>Hours</th></tr>
</table><br>
<input type = 'button' name = 'addValue' onClick = 'addInput()' value = 'Add an entry'><br>
<input type = 'submit' name = 'submit' value = 'Submit'>
</form>
</body>
</html>
