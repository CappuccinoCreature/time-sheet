<html>
<head>
<meta charset = 'UTF-8'>
<h3>Auxiliary Services Time Sheet</h3>
<script language = 'JavaScript'>
  count = 1
  limit = 10
  function addInput(tableId) {
    if (count < limit) {
			var table = document.getElementById(tableId)
			var row = table.insertRow(-1)
			var cell0 = row.insertCell(0)
			var element0 = document.createElement('input')
			element0.type = 'date'
			element0.name = 'dates[]'
			cell0.appendChild(element0)
			var cell1 = row.insertCell(1)
			var element1 = document.createElement('input')
			element1.type = 'number'
			element1.name = 'hours[]'
			cell1.appendChild(element1)
		count++
	} else
		alert = 'You cannot add more than 10 days'
  }
</script>
</head>
<body>
<form method = 'post' action = 'http://localhost/output.php'>
Name:<br>
<input type = 'text' name = 'name'>
<table id = 'timeTable'>
<tr><th>Date</th><th>Hours</th></tr>
<tr><td><input type = 'date' name = 'date'></td>
<td><input type = 'number' name = 'hour' min = .5 max = 30 step = .5></td></tr>
</table><br>
<input type = 'button' name = 'addInput' onClick = 'addInput(timeTable)' value = 'Add an entry'><br><br>
<input type = 'submit' name = 'submit' value = 'Submit'>
</form>
</body>
</html>
